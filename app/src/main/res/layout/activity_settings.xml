<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

    <LinearLayout
      android:id="@+id/blue_section"
      android:layout_width="match_parent"
      android:layout_height="280sp"
      android:layout_alignParentTop="true"
      android:layout_weight="1"
      android:background="#40679E"
      android:orientation="vertical">

        <FrameLayout
          android:layout_width="147dp"
          android:layout_height="147dp"
          android:layout_gravity="center"
          android:layout_marginTop="30dp">

            <ImageView
              android:id="@+id/profile_image_view"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:scaleType="centerCrop"
              android:src="@drawable/acc_prof"
              android:background="@drawable/circular_mask"
              android:clipToOutline="true" />

            <ImageView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:src="@drawable/circular_image"
              android:layout_gravity="center" />
        </FrameLayout>

        <TextView
          android:id="@+id/full_name_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="20sp"
          android:padding="9dp"
          android:layout_gravity="center"
          android:text="Alejandro"
          android:textColor="@android:color/white"
          android:textSize="20sp" />

        <View
          android:layout_width="match_parent"
          android:layout_height="10dp"
          android:background="@android:color/black"
          android:layout_marginTop="35dp"/>

    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/blue_section"
      android:orientation="vertical"
      android:layout_marginTop="20sp"
      android:padding="15dp">


        <TextView
          android:id="@+id/account_settings_text"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:clickable="true"
          android:text="Profile and Account Settings"
          android:textSize="18sp" />

        <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@android:color/darker_gray"
          android:layout_marginTop="20dp"
          android:layout_marginBottom="20dp" />

        <TextView
          android:id="@+id/about_text"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:clickable="true"
          android:text="About WeAssist"
          android:textSize="18sp" />

        <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@android:color/darker_gray"
          android:layout_marginTop="20dp"
          android:layout_marginBottom="20dp" />

        <TextView
          android:id="@+id/help_support_text"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:clickable="true"
          android:text="Help and Support"
          android:textSize="18sp" />

        <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@android:color/darker_gray"
          android:layout_marginTop="20dp"
          android:layout_marginBottom="20dp" />

        <TextView
          android:id="@+id/logout_text"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:clickable="true"
          android:text="Log Out"
          android:textSize="18sp" />

        <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@android:color/darker_gray"
          android:layout_marginTop="20dp"
          android:layout_marginBottom="20dp" />


    </LinearLayout>
</RelativeLayout>
