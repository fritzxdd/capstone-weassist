<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserRegistration"
    android:background="@drawable/bg1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Registration for Lawyers"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/editTextUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="Username"
            android:textStyle="bold"
            android:background="@drawable/edittext_container"
            android:textColor="@color/black"
            android:padding="12dp"
            android:textSize="16sp"
            android:fontFamily="sans-serif" />

        <EditText
            android:id="@+id/editTextfullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Full Name"
            android:textStyle="bold"
            android:background="@drawable/edittext_container"
            android:textColor="@color/black"
            android:padding="12dp"
            android:textSize="16sp"
            android:fontFamily="sans-serif" />

        <EditText
            android:id="@+id/editTextlocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Address"
            android:textStyle="bold"
            android:background="@drawable/edittext_container"
            android:textColor="@color/black"
            android:padding="12dp"
            android:textSize="16sp"
            android:fontFamily="sans-serif" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <EditText
                android:id="@+id/editTextPassword"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_container"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/toggle_password_visibility"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icons_eye_closed"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:layout_marginEnd="8dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <EditText
                android:id="@+id/editTextComfirmPassword"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:textStyle="bold"
                android:background="@drawable/edittext_container"
                android:textColor="@color/black"
                android:padding="12dp"
                android:textSize="16sp"
                android:fontFamily="sans-serif" />

            <ImageView
                android:id="@+id/toggle_confirm_password_visibility"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icons_eye_closed"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:layout_marginEnd="8dp"/>
        </RelativeLayout>

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:background="@drawable/edittext_container"
            android:textColor="@color/black"
            android:padding="12dp"
            android:textSize="16sp"
            android:fontFamily="sans-serif" />

        <EditText
            android:id="@+id/editTextPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Contact Number"
            android:inputType="phone"
            android:background="@drawable/edittext_container"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="12dp"
            android:textSize="16sp"
            android:fontFamily="sans-serif" />

        <EditText
            android:id="@+id/editTextSpecialization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Specialization"
            android:inputType="number"
            android:textStyle="bold"
            android:background="@drawable/edittext_container"
            android:textColor="@color/black"
            android:padding="12dp"
            android:textSize="16sp"
            android:fontFamily="sans-serif" />

        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_border"
            android:layout_gravity="end"
            android:text="Next"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>
